{
  "name": "ai-gb-rec",
  "version": "1.0.0",
  "description": "Game Boy Dynamic Recompiler Emulator",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "analyze": "tsx src/cli/analyze.ts",
    "run": "tsx src/cli/run.ts",
    "render": "tsx src/cli/render.ts",
    "debug-vram": "tsx src/cli/debug-vram.ts",
    "trace": "tsx src/cli/trace.ts",
    "trace-stack": "tsx src/cli/trace-stack.ts",
    "trace-sp": "tsx src/cli/trace-sp.ts",
    "disasm": "tsx src/cli/disasm.ts",
    "show-block": "tsx src/cli/show-block.ts",
    "find-todos": "tsx src/cli/find-todos.ts",
    "find-invalid": "tsx src/cli/find-invalid.ts",
    "vram-map": "tsx src/cli/vram-map.ts",
    "trace-vram-writes": "tsx src/cli/trace-vram-writes.ts",
    "trace-lcd": "tsx src/cli/trace-lcd.ts",
    "trace-vram-recomp": "tsx src/cli/trace-vram-recomp.ts",
    "vram-snapshot": "tsx src/cli/vram-snapshot.ts",
    "check-progress": "tsx src/cli/check-progress.ts",
    "peek-memory": "tsx src/cli/peek-memory.ts",
    "trace-interrupts": "tsx src/cli/trace-interrupts.ts",
    "trace-execution": "tsx src/cli/trace-execution.ts",
    "trace-blocks": "tsx src/cli/trace-blocks.ts",
    "check-opcodes": "tsx src/cli/check-opcodes.ts",
    "trace-before-crash": "tsx src/cli/trace-before-crash.ts",
    "analyze-execution": "tsx src/cli/analyze-execution.ts",
    "debug-transpile": "tsx src/cli/debug-transpile.ts",
    "build-game": "tsx src/cli/build-game.ts",
    "test-aot": "tsx src/cli/test-aot.ts",
    "serve-dist": "serve dist -l 8000"
  },
  "keywords": [
    "gameboy",
    "emulator",
    "recompiler",
    "dynamic-recompilation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/pngjs": "^6.0.5",
    "@vitest/ui": "^4.0.3",
    "pngjs": "^7.0.0",
    "serve": "^14.2.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.3"
  },
  "dependencies": {
    "prettier": "^3.6.2"
  }
}
